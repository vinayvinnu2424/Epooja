<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.LoginActivity">

    <ImageView
        android:id="@+id/img_ic2"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:src="@drawable/epooja_img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/locationbottom">

        <TextView
            android:id="@+id/txt_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Enter_mobile"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:layout_marginTop="25dp"/>
        <TextView
            android:id="@+id/txt_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/txt_1"
            android:text="we will send you the 6 digits verification code"
            android:textSize="12dp"
            android:textColor="@color/white"
            android:layout_marginTop="15dp"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/card_1"
            android:layout_width="350dp"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/txt_2"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            app:cardElevation="25dp">
            <EditText
                android:id="@+id/edit_mobremail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Mobile or Email"
                android:background="@null"
                android:gravity="center"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/card_sign"
            android:layout_below="@+id/card_1"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            app:cardCornerRadius="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            app:cardElevation="25dp">
            <TextView
                android:id="@+id/sign_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign In"
                android:layout_gravity="center"
                android:textColor="@color/colorPrimary"
                android:textSize="15dp"
                android:textStyle="italic"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/txt_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/card_sign"
            android:text="or sign in using"
            android:textSize="12dp"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"/>
        <View
            android:layout_width="35dp"
            android:layout_height="1dp"
            android:layout_toRightOf="@+id/txt_sign"
            android:background="@color/white"
            android:layout_below="@+id/card_sign"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"/>
        <View
            android:layout_width="35dp"
            android:layout_height="1dp"
            android:layout_toLeftOf="@+id/txt_sign"
            android:background="@color/white"
            android:layout_below="@+id/card_sign"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"/>

        <ImageView
            android:id="@+id/img_google"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/txt_sign"
            android:src="@drawable/google_ic"
            android:layout_marginTop="15dp"
            android:background="@drawable/cart_circle_round"/>



    </RelativeLayout>

</RelativeLayout>